extends layout

block main
  form(action="/lists" method="post")
    dl
      dt
        label(for="workoutListTitle") Enter your new category:
      dd

        input(type="text"
              id="workoutListTitle"
              name="workoutListTitle"
              placeholder="Category"
              value= workoutListTitle)

    fieldset.actions
      input(type="submit" value="Save")
      a(href="/lists") Cancel